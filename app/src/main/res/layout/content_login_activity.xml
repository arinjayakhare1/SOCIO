<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bckg">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px"/>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/img_logo"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:background="#00aced"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:fontFamily="cursive"
            android:text="SOCIA"
            android:textSize="60dp"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_below="@+id/img_logo"
            android:id="@+id/button_fb"
            android:layout_width="238dp"
            android:layout_height="50dp"
            android:background="#174EC3"
            android:text="Login with Facebook"
            android:textColor="#f2f4f5"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="25dp"
            />

        <Button
            android:layout_below="@+id/button_fb"
            android:id="@+id/button_google"
            android:layout_width="238dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="#FF1012"
            android:textColor="#f2f4f5"
            android:text="Login with Google"

            android:layout_marginTop="20dp"
            />
        <ImageView
            android:id="@+id/shpe_stroke"
            android:layout_below="@+id/button_google"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_stroke"/>

        <EditText
            android:layout_below="@+id/shpe_stroke"
            android:layout_centerHorizontal="true"
            android:id="@+id/edittext_username"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginTop="20dp"
            android:hint="USER NAME/ EMAIL ID"/>

        <EditText
            android:layout_below="@+id/edittext_username"
            android:layout_centerHorizontal="true"
            android:id="@+id/edittext_password"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:background="@drawable/custom_edittext"
            android:paddingLeft="72dp"
            android:paddingRight="72dp"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            android:inputType="textPassword"
            android:hint="PASSWORD"/>

        <Button
            android:layout_below="@+id/edittext_password"
            android:layout_centerHorizontal="true"
            android:id="@+id/btn_login"
            android:layout_width="238dp"
            android:layout_height="50dp"
            android:background="#f4e542"
            android:text="LOGIN"

            android:layout_marginTop="20dp"
            />

        <RelativeLayout
            android:layout_below="@+id/btn_login"
            android:layout_marginTop="20dp"
            android:layout_width="238dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Don't have an account?"/>
            <TextView
                android:id="@+id/textview_signup"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sign Up"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#00C8FF"/>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
