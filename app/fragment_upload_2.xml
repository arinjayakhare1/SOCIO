<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:text="Select Issues"/>

    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/tagcontainerLayout"
        android:layout_below="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="10dp"
        app:container_background_color="@color/ww"
        app:tag_background_color="@color/colorPrimary"
        app:container_enable_drag="false"
        app:horizontal_interval="10dp"
        app:vertical_interval="10dp"
        app:tag_clickable="true"
        app:tag_theme="random"/>
    <TextView
        android:id="@+id/tv_selected_issue"
        android:layout_below="@+id/tagcontainerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:text="Selected Issues"/>

    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/tagcontainerLayout2"
        android:layout_below="@+id/tv_selected_issue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="10dp"
        app:container_background_color="@color/ww"
        app:tag_background_color="@color/selec"
        app:container_enable_drag="false"
        app:horizontal_interval="10dp"
        app:vertical_interval="10dp"
        app:tag_clickable="true"/>
    <LinearLayout
        android:layout_above="@+id/iv_next2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_text_issues"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Add Issues"/>
        <Button
            android:id="@+id/btn_add_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/edit_text_issues"
            android:text="Add"/>
    </LinearLayout>

        <ImageView
            android:id="@+id/iv_next2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/next"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>





</RelativeLayout>